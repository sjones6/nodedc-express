  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "node",
      "program": "${workspaceFolder}/server/bin/www"
    },
    {
          "type": "node",
          "request": "attach",
          "name": "nodemon",
          "processId": "${command:PickProcess}",
          "restart": true,
          "protocol": "inspector"
      },
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}",
      "args": [
        "./tests/**/*-test.js", "--timeout=120000", "--watch"
      ]
    }
  ]
}